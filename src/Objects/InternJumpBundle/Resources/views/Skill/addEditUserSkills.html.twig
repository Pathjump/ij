{% extends '::base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('css/jquery-ui-1.8.24.custom.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}


<section id="student-01">
<div class="wrapper">

	<div class="Edit-skils">
                <!--form Name-->
                <h1>{%if formName%}{{formName}}{%endif%}:</h1>

            <hr/>
        <div class="edit-skils-box">
                <!--form Desc-->
                <p class="formDesc">{%if formDesc%}{{formDesc}}{%endif%}</p>
             <div class="clear"></div>
        	<form action="" method="get">

                <input name="" type="text" id="skillsSearch">
                <div class="low-btns">
                <input name="" type="button" class="btn1" id="addSkill" value="Add">
                </div>
                <span class="miniError skillError" style="display: none;"></span>
            </form>



             <div class="linkedinSkills">
                <ul id="skillsResult">
                    {% for skill in userSkills %}
                        <li>
                            <span id="skillName">{{skill.title}}</span>
                            <a href="javascript:void(0)" id="deleteSkill" skillId="{{skill.id}}">x</a>
                        </li>
                    {% endfor %}
                </ul>
                <input type="button" id="submitSkills" value="Add skills" {% if not userSkills|length > 0 %}disabled{% endif %} />
                <img src="{{asset('img/ajax-loader.gif')}}" id="addSkillsImg" style="display: none;" />
                </div>
        </div><!--edit-skils-box-->
    </div><!--Edit-skils-->


</div><!--end of wrapper -->
</section>

{% endblock %}

{% block javascripts %}
{{parent()}}
<script>
    var skillArray = new Array(
        {% for skill in userSkills %}
            '{{ skill.title }}'{% if not loop.last %},{% endif %}
        {% endfor %}
    );
    var searcSkillsUrl = '{{ path('get_skills_by_title') }}';
    var saveUserSkillsUrl = '{{path('submitAddEditUserSkills',{'skills': ''})}}';
    var userHomePageUrl = '{{path('student_task',{'loginName' : app.user.loginName})}}';
    var userRemoveSkillurl = '{{path('userRemoveSkill',{'skillId' : ''})}}';

    $(document).ready(function() {
        $('#logedInStudent,#userSkills').addClass('crnt');
        $('#studentNav').show();
    });
</script>
<script src="{{ asset('js/libs/jquery-ui-1.8.24.custom.min.js') }}" type="text/javascript"></script>
<script src="{{asset('bundles/objectsinternjump/js/addEditSkills.js')}}"></script>
{% endblock %}