{% extends '::base.html.twig' %}



{%block body%}

<div class="Your-worth">
    <div class="container">

        <div class="row-fluid show-grid">
            <div class="span7">
                <div class="worth-img">
                    <img src="{{asset('img/bg1.png')}}" />
                </div>
            </div>
            {% if worthUsers | length > 0 %}
            <div class="span5 pull-right">

                <div class="Worth-box">
                    <h4>How much are they Worth? </h4>
                    <div class="Worth-content">
