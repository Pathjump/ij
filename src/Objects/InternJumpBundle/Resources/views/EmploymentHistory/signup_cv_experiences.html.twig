{% endset %}
<script src="{{ asset('js/libs/chosen.jquery.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('js/libs/jquery.livequery.js') }}" type="text/javascript"></script>
<script src="{{ asset('js/libs/jquery-ui-1.8.24.custom.min.js') }}" type="text/javascript"></script>
<script>
    var formElementHTML = '{{ formElementHTML }}';
    function changeInputs() {
        var currentCheck = $(this);
        currentCheck.parent().parent().find('.employmentEndedIn').each(function() {
            if(currentCheck.is(':checked')) {
                $(this).attr('disabled', 'disabled');
                $(this).val('');
            } else {
                $(this).removeAttr('disabled');
            }
        });
    }
    $(document).ready(function() {
        $('.employmentIsCurrentJob').livequery(function() {
            $(this).change(changeInputs);
        });
        $('.employmentStartedFrom').livequery(function() {
            $(this).datepicker({changeYear: true, yearRange : 'c-30:c+0', dateFormat: 'yy-mm-dd', maxDate: new Date()});
        });
        $('.employmentEndedIn').livequery(function() {
            $(this).datepicker({changeYear: true, yearRange : 'c-30:c+0', dateFormat: 'yy-mm-dd', maxDate: new Date()});
        });
        $('#btnAdd').click(function() {
            var tempHtml = formElementHTML;
            $('#formsContainer').append(tempHtml.replace(/\$\$name\$\$/g, $('#formsContainer').children().length));
            $('#btnDel').removeAttr('disabled');
        });
        $('#btnDel').click(function() {
            if($('#formsContainer').children().length == 2) {
                $('#btnDel').attr('disabled','disabled');
            }
            $('#formsContainer').children().last().remove();
        });
        var stuTitleBar = $('#main .wrapper').width();
        $('#student-01 > .wrapper h1 div').width(stuTitleBar-202);
        $('.chzn-select').livequery(function() {
            $(this).chosen();
        });
    });
</script>
{% endblock %}