{% extends '::base.html.twig' %}

{% block title %}Resume Third Step{% endblock %}

{% block stylesheets %}
<link href="{{ asset('css/chosen.css') }}" rel="stylesheet" type="text/css"/>
<link href="{{ asset('css/simpletabs.css') }}" rel="stylesheet" type="text/css"/>
<link href="{{ asset('css/jquery-ui-1.8.24.custom.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
<section id="student-01">
    <div class="wrapper">
        <h1>FOR STUDENTS<div></div></h1>

        <div class="simpleTabs">
            <ul class="simpleTabsNavigation">
                <li><a>Step 1</a></li>
                <li><a>Step 2</a></li>
                <li><a class="current">Step 3</a></li>
                <li><a>Step 4</a></li>
            </ul>

            <div class="simpleTabsContent" style="display: block;">
                <div class="btns" style="float: right;">
                    Click "+" to add a new form&nbsp;&nbsp;&nbsp;
                    <input type="button" id="btnAdd" value="+" />
                    <input disabled="disabled" type="button" id="btnDel" value="-" />
                </div>
                {% if app.session.hasFlash('notice') %}
                <span class="alert fail">
                {{ app.session.flash('notice') | raw }}
                </span>
                {% endif %}
                {% if app.session.hasFlash('success') %}
                <span class="alert success">
                {{ app.session.flash('success') | raw }}
                </span>
                {% endif %}
                {% if app.session.hasFlash('error') %}
                <span class="alert error">
                {{ app.session.flash('error') | raw }}
                </span>
                {% endif %}
                {% if form_errors(form) %}
                <span class="alert error">
                {{ form_errors(form) }}
                </span>
                {% endif %}
                <form class="formTable" id="step03" action="{{ path('signup_cv_experience') }}" method="post" {{ form_enctype(form) }}>
                    <!--form Name-->
                <h2>{%if formName%}{{formName}}{%endif%}:</h2>
                <!--form Desc-->
                <p class="formDesc">{%if formDesc%}{{formDesc}}{%endif%}</p>

                    <div id="formsContainer">
                        {% for employmentHistory in form.employmentHistories %}
                        <div style="margin-bottom:4px;" class="clonedInput">
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td width="160"><label>Title</label></td>
                                    <td>{{ form_widget(employmentHistory.title) }}<span class="miniError">{{ form_errors(employmentHistory.title) }}</span></td>
                                    <td width="75">&nbsp;</td>
                                    <td width="160"><label>Industry</label></td>
                                    <td class="started">{{ form_widget(employmentHistory.industry) }}<span class="miniError">{{ form_errors(employmentHistory.industry) }}</span></td>
                                </tr>
                                <tr>
                                    <td class="top"></td>
                                    <td class="top"></td>
                                    <td>&nbsp;</td>
                                    <td><label>Started Position</label></td>
                                    <td>{{ form_widget(employmentHistory.startedFrom) }}<span class="miniError">{{ form_errors(employmentHistory.startedFrom) }}</span></td>
                                </tr>
                                <tr>
                                    <td>{{ form_label(employmentHistory.isCurrent) }}</td>
                                    <td class="started">{{ form_widget(employmentHistory.isCurrent) }}<span class="miniError">{{ form_errors(employmentHistory.isCurrent) }}</span></td>
                                    <td>&nbsp;</td>
                                    <td><label>Position Ended</label></td>
                                    <td class="started">{{ form_widget(employmentHistory.endedIn) }}<span class="miniError">{{ form_errors(employmentHistory.endedIn) }}</span></td>
                                </tr>
                                <tr>
                                    <td class="top"><label>Company Name</label></td>
                                    <td class="top">{{ form_widget(employmentHistory.companyName) }}<span class="miniError">{{ form_errors(employmentHistory.companyName) }}</span></td>
                                    <td>&nbsp;</td>
                                    <td class="top"><label>Company URL</label></td>
                                    <td>{{ form_widget(employmentHistory.companyUrl) }}<span class="miniError">{{ form_errors(employmentHistory.companyUrl) }}</span></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td>&nbsp;</td>
                                    <td class="top"><label>More Details</label></td>
                                    <td>{{ form_widget(employmentHistory.description) }}<span class="miniError">{{ form_errors(employmentHistory.description) }}</span></td>
                                </tr>
                            </table>
                            <span class="yellowSepa"></span>
                        </div>
                        {% endfor %}
                    </div>

                    {{ form_rest(form) }}
                    <button style="float: right;" class="submit" type="submit" title="{% trans %}Next{% endtrans %}">{% trans %}Next{% endtrans %}</button>
                    <a class="bak" href="{{ path('signup_cv_skills') }}">Back</a>
                    <a class="bak" href="{{ path('signup_cv_success') }}">Skip</a>
                    <div class="clear"></div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
{% set formElementHTML %}
{% spaceless %}
