        </tr>
        <tr>
            <td></td>
            <td></td>
            <td>&nbsp;</td>
            <td class="top"><label>More Details</label></td>
            <td>{{ form_widget(form.employmentHistories.vars.prototype.description) }}</td>
        </tr>
    </table>
    <span class="yellowSepa"></span>
</div>
