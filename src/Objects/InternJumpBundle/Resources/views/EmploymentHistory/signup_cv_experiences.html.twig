            <td width="75">&nbsp;</td>
            <td width="160"><label>Industry</label></td>
            <td class="started">{{ form_widget(form.employmentHistories.vars.prototype.industry) }}</td>
        </tr>
        <tr>
            <td class="top"></td>
            <td class="top"></td>
            <td>&nbsp;</td>
            <td><label>Started Position</label></td>
            <td>{{ form_widget(form.employmentHistories.vars.prototype.startedFrom) }}</td>
        </tr>
        <tr>
